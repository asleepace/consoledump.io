---
export interface Props {
  class?: string
  [key: string]: any
}

const { class: className, ...props } = Astro.props
---

<code class="astro-code dracula" {...props}><slot /></code>
<style is:global>
  @import 'tailwindcss';
  /* Only style code NOT inside pre tags */
  code:not(pre code) {
    @apply bg-neutral-900 text-neutral-300 px-1.5 py-1 rounded font-semibold text-sm font-mono;
  }

  /* Ensure code blocks keep their styling */
  pre code {
    @apply bg-transparent text-inherit p-0 rounded-none;
  }
</style>
