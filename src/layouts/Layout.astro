---
import '@/styles/global.css'
import Navigation from '@/components/Navigation.astro'
import SiteHead from '@/components/SiteHead.astro'

interface Props {
  class?: string
}

const className = Astro.props.class
---

<!doctype html>
<html lang="en">
  <head>
    <SiteHead />
  </head>
  <body
    class:list={[
      'flex flex-col flex-1 max-h-screen bg-black font-mono overflow-hidden',
      className,
    ]}
  >
    <Navigation class:list={['absolute top-0 left-0 right-0']} />
    <slot />
  </body>
</html>
